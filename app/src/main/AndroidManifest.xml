<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name="com.osfans.trime.TrimeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/trime_app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_app_icon_round"
        android:theme="@style/PreferenceTheme">
        <activity
            android:name=".setup.LauchAct">
        </activity>

        <service
            android:name=".TrimeImeService"
            android:exported="false"
            android:label="@string/trime_app_name"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>
        <!--
        <activity android:name="Pref" android:label="@string/ime_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        -->
        <!-- Settings activity -->
        <activity
            android:name=".settings.PrefMainActivity"
            android:launchMode="singleTask" />
        <!-- Using an activity alias to disable/enable the app icon in the launcher -->
        <activity-alias
            android:name="com.osfans.trime.PrefLauncherAlias"
            android:exported="true"
            android:label="@string/trime_app_name"
            android:launchMode="singleTask"
            android:targetActivity=".settings.PrefMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".settings.AboutActivity"
            android:label="@string/settings__about_title" />
        <activity
            android:name=".setup.SetupActivity"
            android:exported="false" />
        <activity
            android:name=".settings.LogActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:parentActivityName=".settings.PrefMainActivity" />
    </application>
</manifest>